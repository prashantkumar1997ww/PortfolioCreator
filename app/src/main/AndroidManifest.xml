<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.portfoliocreator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ProfilePage"
            android:label="Profile Page"
            android:parentActivityName=".HomePage"></activity>
        <activity
            android:name=".LoginPage"
            android:label="Login Page"
            android:parentActivityName=".HomePage"></activity>
        <activity
            android:name=".RegisterPage"
            android:label="Registration Page"
            android:parentActivityName=".HomePage"></activity>
        <activity android:name=".HomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Create Portfolio"
            android:parentActivityName=".HomePage"></activity>
    </application>

</manifest>